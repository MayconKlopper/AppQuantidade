<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.MainPage">

    <StackLayout Spacing="50">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Aplicativo Quantidade!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Quantidade" FontSize="30" HorizontalTextAlignment="Center" />
        <Label x:Name="Quantidade" Text="1" FontSize="48" TextColor="Red" HorizontalTextAlignment="Center" />
        <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Center" Spacing="40">
            <Button Clicked="Soma" Text="+" FontSize="48" BorderWidth="1" BorderColor="#707070" BackgroundColor="White" WidthRequest="90" HeightRequest="90" />
            <Button Clicked="Subtrai" Text="-" FontSize="48" BorderWidth="1" BorderColor="#707070" BackgroundColor="White" WidthRequest="90" HeightRequest="90" />
        </StackLayout>
    </StackLayout>
</ContentPage>
